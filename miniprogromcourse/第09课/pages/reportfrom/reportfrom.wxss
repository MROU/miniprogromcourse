.main {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.hintstr {
  color: #999;
}

.timeval {
  border-radius: 20rpx;
  color: #999;
  width: 70rpx;
  height: 46rpx;
  padding-left: 6rpx;
  padding-right: 6rpx;
  border: 1rpx solid #999;
  margin-left: 20rpx;
  text-align: center;
  font-size: 30rpx;
}

.timeval_selected{
  border-radius: 20rpx;
  color: #2980B9;
  width: 70rpx;
  height: 46rpx;
  padding-left: 6rpx;
  padding-right: 6rpx;
  border: 1rpx solid #2980B9;
  margin-left: 20rpx;
  text-align: center;
  font-size: 30rpx;
}

.time{
  border-bottom: 8rpx solid #eeeeee 
}

.timestyle {
  display: flex;
