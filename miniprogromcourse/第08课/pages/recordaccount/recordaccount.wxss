/* pages/addrecord/addrecord.wxss */

.main {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.vcenter {
  text-align: center;
}
.add_img {
	width: 120rpx;
	height: 120rpx;
}
.goods-list {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.show-address {
  width: 100%;
  box-sizing: border-box;
  background-size: 30rpx auto;
  padding-bottom: 24rpx;
}

.show-address .name-tel-color {
  font-size: 38rpx;
  color: #000;
  padding: 5rpx 0 5rpx 0;
}

.pickstyle {
  display: flex; /*or inline-flex*/
  flex-direction: row;
  margin-top: 20rpx;
}

input {
  width: 100%;
  height: 1em;
  margin-top: 15rpx;
  padding: 5rpx;
  margin-right: 20rpx;
}

textarea{
  width: 100%;
  height: 4em;
  margin-top: 15rpx;
  padding: 5rpx;
}


.iflex {
  flex: 1;
}

.login {
  margin-right: 20rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 20px;
}

.tcenter {
  text-align: center;
  vertical-align: middle;
  margin-top: 15rpx;
}

.pickertime {
  margin-left: 20rpx;
}

.cell {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border-bottom: 0.8rpx solid #dadada;
  box-sizing: border-box;
  padding: 20rpx;
}


.cell-start {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-bottom: 0.8rpx solid #dadada;
  box-sizing: border-box;
  padding: 20rpx;
}


.cell-top {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border-top: 0.8rpx solid #dadada;
  border-bottom: 0.8rpx solid #dadada;
  box-sizing: border-box;
  padding: 20rpx;
}

.cell-ft {
  flex: 4;
  text-align: left;
}

.cell-fr {
  flex: 3;
  justify-content: flex-end;
  text-align: right;
}
