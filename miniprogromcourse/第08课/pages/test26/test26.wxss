.view_bg{
  height: 500rpx;
  background: #987654;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.img{
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid #ffffff;
  border-radius: 50%;
}
.content{
 font-size: 40rpx;
 color: #ffffff;
}
.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
}
.item-left{
 flex: 1;
   display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
}
.item-right{
 flex: 1;
   display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.img-45{
  width: 45rpx;
  height: 45rpx;
}
.name{
  font-size: 40rpx;
  margin-left: 20rpx;
}
.img-60{
  width: 60rpx;
  height: 60rpx;
}
.num{
  width: 60rpx;
  height: 60rpx;
  background: #ff0000;
  color: #ffffff;
  border-radius: 50%;
  text-align: center;
}